<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="TeacherResponsive.css">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <title>Document</title>
</head>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@500&family=Mukta:wght@500&family=Roboto&display=swap');

    * {
        margin: 0;
        padding: 0;
        text-decoration: none;
        list-style: none;
        box-sizing: border-box;

    }

    html {
        height: 100%;
        position: relative;
    }

    body {
        font-family: montserrat;

    }

    .nav1 {
        background: rgb(27, 152, 255);

        width: 100%;
        height: 40px;
        display: flex;
        justify-content: space-between;
    }

    .nav1 p {
        font-size: 20px;
        padding-top: 9px;
        padding-left: 10px;
        color: rgb(255, 255, 255);

    }

    nav {
        background: white;
        height: 60px;
        width: 100%;



    }

    label.logo {
        color: rgb(0, 0, 0);
        line-height: 70px;
        font-size: 30px;
        padding: 0 50px;
        font-weight: bold;
    }

    nav ul {
        float: right;
        margin-right: 20px;

    }

    nav ul li {
        display: inline-block;
        line-height: 60px;
        margin: 0 5px;

    }

    nav ul li a {

        color: rgb(0, 0, 0);
        font-size: 18px;
        text-transform: uppercase;
        padding: 8px 14px;
        border-radius: 3px;
    }



    a.active,
    a:hover {

        transition: .5s;
    }

    .checkbtn {
        font-size: 30px;
        color: rgb(0, 0, 0);
        float: right;
        line-height: 60px;
        margin-right: 35px;
        cursor: pointer;
    }

    #check {
        display: none;
    }

    #FIRSTHR {
        width: 95%;
        height: 2px;
        background: rgb(27, 152, 255);
        border: 0;

    }

    .container {
        min-height: 10vh;
        display: flex;
        flex-direction: column;
        background: rgb(27, 152, 255);
        margin-top: 600px;

    }

    .footer {

        margin-top: auto;

    }


    #abc {
        color: rgb(27, 152, 255);

    }

    .line {
        padding-top: 10px;
        padding-left: 5%;

    }

    .table-container {
        margin: 0;

        padding: 20px;
        width: 100%;
        box-sizing: border-box;
        padding-top: 30px;

    }

    .table-container h1 {
        font-size: 25px;
        padding-left: 20px;
        padding-bottom: 30px;

    }

    table {

        width: 100%;
        border-collapse: collapse;

    }

    table th,
    table td {
        padding: 10px 15px;
        border: 1px solid rgb(53, 53, 53);
        text-align: center;

    }

    table th {
        background-color: rgb(218, 218, 218);
    }

    @media(min-width:858px) {
        .checkbtn {
            display: none;

        }
    }

    @media(max-width: 952px) {
        label.logo {
            font-size: 25px;
            padding-left: 10px;
        }

        nav ul li a {
            font-size: 15px;

        }
    }

    @media(max-width:858px) {
        .checkbtn {
            display: block;


        }

        ul {
            z-index: 100;
            position: fixed;
            width: 100%;
            height: 120vh;
            background-color: #ffffff;
            top: 100px;
            right: -106%;
            padding-left: 2rem;
            transition: all .5s;


        }

        nav ul li {
            display: block;
            margin: 50px 0;
            line-height: 30px;
        }

        nav ul li a {
            font-size: 20px;

        }

        a:hover,
        a:active {
            background: none;
            color: #1b9bff;
        }

        #check:checked~ul {
            right: -6%;
        }

        #FCRIT {
            display: none;
        }
    }

    @media(max-width:400px) {

        table,
        table tbody,
        table tr,
        table td {
            display: block;
            width: 100%;
        }


        table thead {
            display: none;
        }

        table .SR {
            background-color: #e4e4e4;
        }

        table td {
            text-align: right;
            padding-left: 50%;
            position: relative;
        }

        table tr {
            margin-bottom: 10px;
        }

        table td::before {
            content: attr(data-label);
            position: absolute;
            left: 0;
            width: 50%;
            padding-left: 15px;
            font-size: 15px;
            font-weight: bold;
            text-align: left;
        }
    }
</style>


<body>
    <div class="nav1">
        <p>Online LOR System
        </p>
        <p id="FCRIT">Fr. Conceicao Rodrigues Institute of Technology
        </p>
    </div>
    <nav>
        <input type="checkbox" id="check">
        <label for="check" class="checkbtn">
            <i class="fas fa-bars" id="abc"></i>
        </label>
        <label class="logo">Admin Portal</label>
        <ul>
            <li><a class="active" href="/">HOME</a></li>
            <li><a href="/">
                    <%=admin1 %>
                </a></li>
            <li><a href="#">MENU</a></li>
        </ul>
    </nav>
    <div class="line">
        <hr id="FIRSTHR">
    </div>

    <div class="table-container">
        <h1>Student LOR Requests</h1>
        <table id="myTable" class="table">
            <thead>
                <tr>
                    <th>SR NO</th>
                    <th>NAME</th>
                    <th>BRANCH</th>
                    <th>TEACHER</th>
                    <th>DATE</th>
                </tr>
            </thead>
            <tbody>
            <% records.forEach(function(stu,index) {%>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td>
                        <%= stu.Name %></a>
                    </td>
                    <td>
                        <%= stu.branch %>
                    </td>
                    <td>
                        <%= stu.teacher %>
                    </td>
                    <td>
                        <%= stu.date + "/" + (++stu.month) + "/" + stu.dateyear %>
                    </td>
                </tr>

                <% }) %>
            </tbody>
        </table>
    </div>

    <div class="container">
        <!-- put content here -->
        <div class="footer"></div>
    </div>
</body>
<script>
    th = document.getElementsByTagName('th');
    console.log(th)
    for(let c=0; c < th.length; c++){
        console.log("work")
        th[c].addEventListener('click',item(c))
    }
    function item(c){
    
        return function(){
          console.log(c)
          sortTable(c)
        }
    }
    
    
    function sortTable(c) {
      var table, rows, switching, i, x, y, shouldSwitch;
      table = document.getElementById("myTable");
      switching = true;
      /*Make a loop that will continue until
      no switching has been done:*/
      while (switching) {
        //start by saying: no switching is done:
        switching = false;
        rows = table.rows;
        /*Loop through all table rows (except the
        first, which contains table headers):*/
        for (i = 1; i < (rows.length - 1); i++) {
          //start by saying there should be no switching:
          shouldSwitch = false;
          /*Get the two elements you want to compare,
          one from current row and one from the next:*/
          x = rows[i].getElementsByTagName("TD")[c];
          y = rows[i + 1].getElementsByTagName("TD")[c];
          //check if the two rows should switch place:
          if (x.innerHTML.toLowerCase() < y.innerHTML.toLowerCase()) {
            //if so, mark as a switch and break the loop:
            shouldSwitch = true;
            break;
          }
        }
        if (shouldSwitch) {
          /*If a switch has been marked, make the switch
          and mark that a switch has been done:*/
          rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
          switching = true;
        }
      }
    }
    </script>
</html>